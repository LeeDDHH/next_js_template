{
  "search.exclude": {
    "**/node_modules": true,
    "**/public": true,
    "**/.cache": true,
    "**/.git": true
  },
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "files.trimTrailingWhitespace": false,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  // ESLint
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // Prettier
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
